<%= form_with(model: delivery) do |form| %>
<% if delivery.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(delivery.errors.count, "error") %> prohibited this delivery from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% delivery.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :cost, class: label_class %>
          <%= form.text_field :cost, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :shipping_method, class: label_class %>
          <%= form.text_field :shipping_method, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :date, class: label_class %>
          <%= form.time_field :date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :infomation_id, class: label_class %>
          <%= form.select :infomation_id, options_from_collection_for_select(Infomation.all, 'id', 'customer_name', selected = delivery.infomation_id), class: label_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if delivery.persisted? %>
<%= link_to "Cancel", delivery, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", deliveries_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
