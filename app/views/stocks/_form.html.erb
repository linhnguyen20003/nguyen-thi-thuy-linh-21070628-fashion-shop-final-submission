<%= form_with(model: stock) do |form| %>
<% if stock.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% stock.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :product_name, class: label_class %>
          <%= form.text_field :product_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :available, class: label_class %>
          <%= form.check_box :available, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :location, class: label_class %>
          <%= form.text_field :location, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :quantity, class: label_class %>
          <%= form.number_field :quantity, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :product_infomation_id, class: label_class %>
          <%= form.select :product_infomation_id, options_from_collection_for_select(Product_infomation.all, 'id', 'product_name', selected = product_information.infomation_id), class: label_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if stock.persisted? %>
<%= link_to "Cancel", stock, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", stocks_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
