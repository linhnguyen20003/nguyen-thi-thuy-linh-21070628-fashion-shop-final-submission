<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Order_information</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to order_informations_path, class: button_class(theme: "transparent") do %>
      All Order_informations
      <% end %>
      <%= link_to edit_order_information_path(@order_information), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Order status code:</p>
        <p><%= @order_information.order_status_code %></p>
      </li>
      <li>
        <p class="font-semibold">Date order placed:</p>
        <p><%= @order_information.date_order_placed %></p>
      </li>
      <li>
        <p class="font-semibold">Infomation:</p>
        <p><%= @order_information.infomation %></p>
      </li>
  </ul>
</div>
