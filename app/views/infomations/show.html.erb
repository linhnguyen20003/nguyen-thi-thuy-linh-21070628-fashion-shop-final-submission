<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Infomation</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to infomations_path, class: button_class(theme: "transparent") do %>
      All Infomations
      <% end %>
      <%= link_to edit_infomation_path(@infomation), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Customer name:</p>
        <p><%= @infomation.customer_name %></p>
      </li>
      <li>
        <p class="font-semibold">Date of birth:</p>
        <p><%= @infomation.date_of_birth %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @infomation.email %></p>
      </li>
      <li>
        <p class="font-semibold">Phone number:</p>
        <p><%= @infomation.phone_number %></p>
      </li>
      <li>
        <p class="font-semibold">Address:</p>
        <p><%= @infomation.address %></p>
      </li>
  </ul>
</div>
